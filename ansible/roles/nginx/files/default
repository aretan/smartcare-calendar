# For Docker
server {
       listen 8080;
       server_name _;
       index index.php;

       location / {
           root /var/www/html/public;
           try_files $uri $uri/ /index.php$is_args$args;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.3-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
               internal;
           }
       }
}

# For Vagrant
server {
       listen 80;
       listen 443 ssl http2;
       include snippets/snakeoil.conf;
       server_name 192.168.33.10;
       index index.php;

       auth_basic "HTTP Basic Authentication";
       auth_basic_user_file /etc/nginx/htpasswd;

       location / {
           root /var/www/smartcare-calendar/public;
           try_files $uri $uri/ /index.php$is_args$args;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.3-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
               internal;
           }
       }

       location /phpmyadmin {
           root /usr/share;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.3-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
           }
       }
}

# for Develop (master)
server {
       listen 80;
       listen 443 ssl http2;
       include snippets/snakeoil.conf;
       server_name smartcare-calendar.net;
       index index.php;

       auth_basic "HTTP Basic Authentication";
       auth_basic_user_file /etc/nginx/htpasswd;

       location / {
           root /var/www/smartcare-calendar/master/current/public;
           try_files $uri $uri/ /index.php$is_args$args;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.2-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
               internal;
           }
       }

       location /phpmyadmin {
           root /usr/share;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.2-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
           }
       }
}

# for Develop (branches)
server {
       listen 80;
       listen 443 ssl http2;
       include snippets/snakeoil.conf;
       server_name ~^(?<branch>.+)\.smartcare-calendar\.net$;
       index index.php;

       auth_basic "HTTP Basic Authentication";
       auth_basic_user_file /etc/nginx/htpasswd;

       location / {
           root /var/www/smartcare-calendar/$branch/current/public;
           try_files $uri $uri/ /index.php$is_args$args;
           location ~ \.php$ {
               include       snippets/fastcgi-php.conf;
               fastcgi_pass  unix:/run/php/php7.2-fpm.sock;
               include       fastcgi_params;
               fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
               fastcgi_param DOCUMENT_ROOT   $realpath_root;
               add_header    X-Realpath-Root $realpath_root always;
               add_header    X-Hostname      $hostname      always;
               internal;
           }
       }
}
